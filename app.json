{
  "expo": {
    "name": "Nexus Nebula",
    "slug": "nexus-nebula",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "nexusnebula",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nexusnebula.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0a0a0f",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.nexusnebula.app"
    },
    "web": {
      "output": "single",
      "favicon": "./web/icons/icon-192x192.svg",
      "name": "Nexus Nebula: Rogue Bayes Engine",
      "shortName": "Nexus",
      "description": "A sovereign Bayesian swarm orchestrator with multi-turn critique and real-time consensus.",
      "backgroundColor": "#0a0a0a",
      "themeColor": "#0a0a0a",
      "orientation": "portrait",
      "display": "standalone",
      "scope": "/",
      "startUrl": "/"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0a0a0f",
          "dark": {
            "backgroundColor": "#0a0a0f"
          }
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}